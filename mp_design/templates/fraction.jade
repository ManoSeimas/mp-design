- extends "base.jade"
- load static from staticfiles

- block title
  | Socialdemokratų partijos frakcija


- block middle
  .photo-box.fraction
    .ui.page.grid
      .center.aligned.four.wide.column
        .logo-box
          img(src="{% static 'img/fractions/lsdp.png' %}")
      .twelve.wide.column
        .title
          h1 Lietuvos Socialdemokratų partijos frakcija


  .colored-bg
    .ui.page.grid
      .stats-box
        .pie
          .graph
            img(src="{% static 'img/pie.png' %}")
          .info
            .title: h3 Dalyvavimas balsavimuose
        .rating: .ui.indicating.progress(data-percent="74"): .bar

      .stats-box
        .two-numbers
          h3 Aktyvumas diskusijuose
          .block
            h4.number 652
            p.explanation pasisakymai (vid.)
          .block
            h4.number 89%
            .explanation pasiūlytuose projektuose
        .rating: .ui.indicating.progress(data-percent="74"): .bar

      .stats-box
        .three-numbers
          h3 Įstatymų projetai
          .block
            h4.number 105
            p.explanation pasiūlyti
          .block
            h4.number 5
            .explanation priimti
          .block
            h4.number 8%
            .explanation palaikymas
        .rating: .ui.indicating.progress(data-percent="74"): .bar

      .stats-box.total
        .stats
          h3 40%
          .explanation bendras aktyvumas
        .vertical-progress: .bar: .text

